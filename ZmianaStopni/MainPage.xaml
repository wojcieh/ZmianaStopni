<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZmianaStopni.MainPage">
    <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="50" ColumnSpacing="10" Padding="5">
    <Entry x:Name="stopnie"></Entry>
        <Picker x:Name="rodzaj" Grid.Column="1">
            <Picker.Items>
                <x:String>Celcjusz</x:String>
                <x:String>Fahrenheit</x:String>
            </Picker.Items>
        </Picker>
    <Button Text="Zamień" Grid.Column="2" Clicked="Button_Clicked"></Button>
        <Label x:Name="wynik" Grid.Column="3" Text="to stopni" VerticalTextAlignment="Center"></Label>
</Grid>
</ContentPage>
